<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<GridPane style="-fx-background-color: skyblue;"
	xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.OlimpiadasController">
	<columnConstraints>
		<ColumnConstraints hgrow="ALWAYS" minWidth="10.0"
			prefWidth="225.0" />
		<ColumnConstraints hgrow="ALWAYS" minWidth="10.0"
			prefWidth="361.0" />
		<ColumnConstraints hgrow="ALWAYS" minWidth="10.0"
			prefWidth="305.0" />
	</columnConstraints>
	<rowConstraints>
		<RowConstraints maxHeight="192.0" minHeight="3.0"
			prefHeight="73.0" vgrow="SOMETIMES" />
		<RowConstraints maxHeight="222.0" minHeight="10.0"
			prefHeight="79.0" vgrow="SOMETIMES" />
		<RowConstraints maxHeight="222.0" minHeight="10.0"
			prefHeight="38.0" vgrow="SOMETIMES" />
		<RowConstraints maxHeight="275.0" minHeight="10.0"
			prefHeight="186.0" vgrow="SOMETIMES" />
		<RowConstraints maxHeight="138.0" minHeight="10.0"
			prefHeight="130.0" vgrow="SOMETIMES" />
		<RowConstraints minHeight="10.0" prefHeight="30.0"
			vgrow="SOMETIMES" />
	</rowConstraints>
	<children>
		<MenuBar GridPane.columnSpan="2147483647"
			GridPane.hgrow="ALWAYS" GridPane.valignment="TOP">
			<menus>
				<Menu fx:id="menuDeportista" mnemonicParsing="false"
					text="Deportistas">
					<items>
						<MenuItem fx:id="aniadirDeportista"
							mnemonicParsing="false" onAction="#aniadirDeportista"
							text="Añadir" />
						<MenuItem fx:id="gestionarDeportista"
							mnemonicParsing="false" onAction="#gestionarDeportista"
							text="Gestionar" />
					</items>
				</Menu>
				<Menu fx:id="menuDeporte" mnemonicParsing="false"
					text="Deportes">
					<items>
						<MenuItem fx:id="aniadirDeporte" mnemonicParsing="false"
							onAction="#aniadirDeporte" text="Añadir" />
						<MenuItem fx:id="gestionarDeporte"
							mnemonicParsing="false" onAction="#gestionarDeporte"
							text="Gestionar" />
					</items>
				</Menu>
				<Menu fx:id="menuEquipos" mnemonicParsing="false"
					text="Equipos">
					<items>
						<MenuItem fx:id="aniadirEquipos" mnemonicParsing="false"
							onAction="#aniadirEquipos" text="Añadir" />
						<MenuItem fx:id="gestionarEquipos"
							mnemonicParsing="false" onAction="#gestionarEquipos"
							text="Gestionar" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
		<Label alignment="CENTER" text="OLIMPIADAS"
			GridPane.columnSpan="2" GridPane.halignment="CENTER"
			GridPane.valignment="BOTTOM">
			<font>
				<Font size="20.0" />
			</font>
			<GridPane.margin>
				<Insets bottom="5.0" />
			</GridPane.margin>
		</Label>
		<ComboBox fx:id="cboxOlimpiadas" onAction="#selectOlimpiadas"
			prefHeight="24.0" prefWidth="405.0" promptText="Elige Olimpiada"
			GridPane.columnSpan="2" GridPane.halignment="CENTER"
			GridPane.rowIndex="1" />
		<FlowPane alignment="CENTER" hgap="15.0" prefHeight="200.0"
			prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
			<children>
				<Button fx:id="aniadirOlimpiada" mnemonicParsing="false"
					onAction="#aniadirOlimpiada" style="-fx-background-radius: 10;"
					text="Añadir">
					<graphic>
						<FontIcon iconLiteral="fas-external-link-square-alt" />
					</graphic>
				</Button>
				<Button fx:id="editarOlimpiada" mnemonicParsing="false"
					onAction="#editarOlimpiada" style="-fx-background-radius: 10;"
					text="Editar">
					<graphic>
						<FontIcon iconLiteral="fas-pen" />
					</graphic>
				</Button>
				<Button fx:id="borrarOlimpiada" mnemonicParsing="false"
					onAction="#borrarOlimpiada" style="-fx-background-radius: 10;"
					text="Borrar">
					<graphic>
						<FontIcon iconLiteral="fas-trash-alt" />
					</graphic>
				</Button>
			</children>
		</FlowPane>
		<ListView fx:id="listEventos" onMouseClicked="#selectEvento"
			prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="2"
			GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" GridPane.rowSpan="2">
			<GridPane.margin>
				<Insets left="30.0" right="30.0" />
			</GridPane.margin>
			<contextMenu>
				<ContextMenu>
					<items>
						<MenuItem fx:id="editarEvento" mnemonicParsing="false"
							onAction="#editarEvento" text="Editar" />
						<MenuItem fx:id="borrarEvento" mnemonicParsing="false"
							onAction="#borrarEvento" text="Borrar" />
					</items>
				</ContextMenu>
			</contextMenu>
		</ListView>
		<FlowPane alignment="CENTER" hgap="15.0" prefHeight="200.0"
			prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowIndex="3">
			<children>
				<Button fx:id="aniadirEvento" mnemonicParsing="false"
					onAction="#aniadirEvento" style="-fx-background-radius: 10;"
					text="Añadir Evento">
					<graphic>
						<FontIcon iconLiteral="fas-external-link-square-alt" />
					</graphic>
				</Button>
			</children>
		</FlowPane>
		<Label text="EVENTOS" GridPane.columnSpan="2"
			GridPane.halignment="CENTER" GridPane.rowIndex="2">
			<font>
				<Font size="20.0" />
			</font>
		</Label>
		<Button fx:id="verParticipaciones" mnemonicParsing="false"
			onAction="#verParticipaciones" style="-fx-background-radius: 10;"
			text="Ver Participaciones" GridPane.columnIndex="2"
			GridPane.halignment="CENTER" GridPane.rowIndex="4"
			GridPane.valignment="TOP">
			<graphic>
				<FontIcon iconLiteral="fas-eye" />
			</graphic>
		</Button>
		<FlowPane alignment="BOTTOM_CENTER" hgap="20.0"
			prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="2">
			<children>
				<RadioButton fx:id="rbtnVerano" mnemonicParsing="false"
					onAction="#verano" selected="true" text="Verano">
					<toggleGroup>
						<ToggleGroup fx:id="estacion" />
					</toggleGroup>
				</RadioButton>
				<RadioButton fx:id="rbtnInvierno"
					mnemonicParsing="false" onAction="#invierno" text="Invierno"
					toggleGroup="$estacion" />
			</children>
		</FlowPane>
		<ImageView fx:id="imagen" fitHeight="31.0" fitWidth="86.0"
			pickOnBounds="true" preserveRatio="true" GridPane.halignment="RIGHT"
			GridPane.valignment="BOTTOM" />
	</children>
</GridPane>
