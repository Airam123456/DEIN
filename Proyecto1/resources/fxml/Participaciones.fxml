			prefWidth="100.0" spacing="34.0" GridPane.columnIndex="1"
			GridPane.rowIndex="2" GridPane.rowSpan="2">
			<children>
				<Label text="Equipo: " />
				<Label text="Medalla: " />
				<Label text="Edad: " />
			</children>
		</VBox>
