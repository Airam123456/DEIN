				<Button fx:id="btnAgregar" mnemonicParsing="false"
					onAction="#agregar" prefWidth="75.0" text="Agregar" />
				<Button fx:id="btnEditar" mnemonicParsing="false"
					onAction="#editar" prefWidth="75.0" text="Editar" />
				<Button fx:id="btnBorrar" mnemonicParsing="false"
					onAction="#borrar" prefWidth="75.0" text="Borrar" />
