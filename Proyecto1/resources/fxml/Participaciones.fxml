	prefWidth="659.0" xmlns:fx="http://javafx.com/fxml/1"
	xmlns="http://javafx.com/javafx/19"
	fx:controller="controller.ParticipacionesController">
	<columnConstraints>
		<ColumnConstraints hgrow="SOMETIMES"
			maxWidth="374.0" minWidth="10.0" prefWidth="353.0" />
		<ColumnConstraints hgrow="SOMETIMES"
			maxWidth="211.0" minWidth="10.0" prefWidth="98.0" />
		<ColumnConstraints hgrow="SOMETIMES"
			maxWidth="192.0" minWidth="10.0" prefWidth="230.0" />
	</columnConstraints>
	<rowConstraints>
		<RowConstraints maxHeight="139.0" minHeight="0.0"
			prefHeight="30.0" vgrow="SOMETIMES" />
		<RowConstraints maxHeight="279.0" minHeight="10.0"
			prefHeight="236.0" vgrow="SOMETIMES" />
		<RowConstraints maxHeight="98.0" minHeight="2.0"
			prefHeight="26.0" vgrow="SOMETIMES" />
		<RowConstraints maxHeight="218.0" minHeight="10.0"
			prefHeight="194.0" vgrow="SOMETIMES" />
		<RowConstraints maxHeight="62.0" minHeight="10.0"
			prefHeight="50.0" vgrow="SOMETIMES" />
