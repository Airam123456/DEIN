				<Insets bottom="25.0" left="25.0" right="25.0" />
			</GridPane.margin>
		</ListView>
		<Label text="PARTICIPACIONES" GridPane.columnSpan="3"
			GridPane.halignment="CENTER">
			<font>
				<Font size="20.0" />
			</font>
		</Label>
		<Label text="Deportistas" GridPane.halignment="CENTER"
			GridPane.rowIndex="2">
			<font>
				<Font size="16.0" />
			</font>
		</Label>
		<ListView fx:id="listDeportista"
			onMouseClicked="#selectDeportista" prefHeight="110.0"
			prefWidth="334.0" GridPane.rowIndex="3">
