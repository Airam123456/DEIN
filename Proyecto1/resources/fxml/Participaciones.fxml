					prefHeight="24.0" prefWidth="170.0" />
				<ComboBox fx:id="cboxMedalla"
					onAction="#seleccionarMedalla" prefHeight="24.0" prefWidth="170.0" />
				<TextField fx:id="txtEdad" prefHeight="24.0"
					prefWidth="123.0">
					<VBox.margin>
						<Insets right="50.0" />
					</VBox.margin>
				</TextField>
			</children>
		</VBox>
	</children>
