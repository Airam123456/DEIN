			<menus>
				<Menu mnemonicParsing="false" text="Prestamos">
					<items>
						<MenuItem fx:id="menuGestionarPrestamo"
							mnemonicParsing="false" onAction="#gestionarPrestamo"
							text="Gestionar" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Historico">
					<items>
						<MenuItem fx:id="menuGestionarHistorico"
							mnemonicParsing="false" onAction="#gestionarHistorico"
							text="Gestionar" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Informes">
					<items>
						<MenuItem fx:id="menuInformeLibros"
							mnemonicParsing="false" onAction="#informeLibros" text="Libros" />
						<MenuItem fx:id="menuInformeGraficos"
							mnemonicParsing="false" onAction="#informeGraficos"
							text="Graficos" />
						<MenuItem fx:id="menuInformeCalculos"
							mnemonicParsing="false" onAction="#informeCalculos"
