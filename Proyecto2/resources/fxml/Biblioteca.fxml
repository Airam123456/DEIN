		<GridPane minWidth="450.0" prefHeight="399.0"
			prefWidth="450.0" GridPane.halignment="LEFT" GridPane.rowIndex="1">
			<columnConstraints>
				<ColumnConstraints />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints maxHeight="70.0" minHeight="4.0"
					prefHeight="35.0" vgrow="SOMETIMES" />
				<RowConstraints maxHeight="70.0" minHeight="4.0"
					prefHeight="39.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="324.0"
					vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<Label id="alumno" text="Alumnos" GridPane.columnIndex="1"
					GridPane.valignment="CENTER">
					<font>
						<Font size="22.0" />
					</font>
					<graphic>
						<FontIcon iconLiteral="fas-graduation-cap" />
					</graphic>
				</Label>
				<TextField fx:id="txtBuscarAlumno" styleClass="txtField"
					GridPane.columnIndex="1" GridPane.rowIndex="1" />
				<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0"
					spacing="10.0" GridPane.columnIndex="2">
					<children>
						<Button fx:id="btnCrearAlumno" mnemonicParsing="false"
							onAction="#crearAlumnoBtn" styleClass="botonNormal" text="Añadir">
							<tooltip>
								<Tooltip text="Crear Alumno" />
							</tooltip>
						</Button>
						<Button fx:id="btnEditarAlumno" mnemonicParsing="false"
							onAction="#editarAlumnoBtn" styleClass="botonNormal"
							text="Editar">
							<tooltip>
								<Tooltip text="Modificar Alumno" />
							</tooltip>
						</Button>
						<Button fx:id="btnBorrarAlumno" mnemonicParsing="false"
							onAction="#borrarAlumnoBtn" styleClass="botonNormal"
							text="Borrar">
							<tooltip>
								<Tooltip text="Borrar Alumno" />
							</tooltip>
						</Button>
					</children>
				</HBox>
				<ListView fx:id="lstAlumno"
