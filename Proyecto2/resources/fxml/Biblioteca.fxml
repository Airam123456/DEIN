			mnemonicParsing="false" onAction="#realizarPrestamo"
			prefHeight="39.0" prefWidth="233.0" styleClass="botonConfirmar"
			text="Realizar Prestamo" textAlignment="CENTER"
			GridPane.columnSpan="2" GridPane.halignment="CENTER"
			GridPane.rowIndex="3" GridPane.valignment="CENTER">
			<font>
				<Font size="19.0" />
			</font>
			<graphic>
				<FontIcon iconLiteral="fas-handshake" />
			</graphic>
			<tooltip>
				<Tooltip text="Prestar libro a un alumno" />
			</tooltip>
		</Button>
