						<MenuItem fx:id="menuGuia" mnemonicParsing="false"
							onAction="#abrirGuia" text="Guia" />
						<MenuItem fx:id="menuManual" mnemonicParsing="false"
							onAction="#abrirManual" text="Manual" />
					</items>
				</Menu>
			</menus>
