					prefHeight="39.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="324.0"
					vgrow="SOMETIMES" />
				<RowConstraints />
			</rowConstraints>
			<children>
				<Label text="Libros" GridPane.valignment="CENTER">
					<font>
						<Font size="22.0" />
					</font>
					<graphic>
						<FontIcon iconLiteral="fas-book" />
					</graphic>
				</Label>
				<TextField fx:id="txtBuscarLibros" styleClass="txtField"
					GridPane.rowIndex="1" />
				<TableView fx:id="tblLibro"
					onMouseClicked="#seleccionarFilaTbl" prefHeight="200.0"
					prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="2"
					GridPane.rowSpan="2" GridPane.vgrow="SOMETIMES">
					<columns>
						<TableColumn fx:id="colCodigoLibro" prefWidth="77.0"
							text="Codigo" />
						<TableColumn fx:id="colTitulo" prefWidth="228.0"
							text="Titulo" />
						<TableColumn fx:id="colAutorLibro" prefWidth="141.0"
							text="Autor" />
						<TableColumn fx:id="colEstadoLibro" prefWidth="108.0"
							text="Estado" />
					</columns>
					<contextMenu>
						<ContextMenu>
							<items>
								<MenuItem fx:id="menuCrearLibro"
									mnemonicParsing="false" onAction="#crearLibro" text="Crear" />
								<MenuItem fx:id="menuEditarLibro"
									mnemonicParsing="false" onAction="#editarLibro"
									text="Editar" />
								<MenuItem fx:id="menuBorrarLibro"
									mnemonicParsing="false" onAction="#borrarLibro" text="Baja" />
							</items>
						</ContextMenu>
					</contextMenu>
				</TableView>
				<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0"
					spacing="10.0" GridPane.columnIndex="1"
					GridPane.halignment="CENTER">
					<children>
						<Button fx:id="btnCrearLibro" mnemonicParsing="false"
							onAction="#crearLibroBtn" styleClass="botonNormal" text="Añadir">
							<tooltip>
								<Tooltip text="Crear Libro" />
							</tooltip>
						</Button>
						<Button fx:id="btnEditarLibro" mnemonicParsing="false"
							onAction="#editarLibroBtn" styleClass="botonNormal" text="Editar">
							<tooltip>
								<Tooltip text="Modificar Libro" />
							</tooltip>
						</Button>
						<Button fx:id="btnBorrarLibro" mnemonicParsing="false"
							onAction="#borrarLibroBtn" styleClass="botonNormal" text="Baja">
							<tooltip>
								<Tooltip text="Dar de baja un libro" />
							</tooltip>
						</Button>
					</children>
				</HBox>
			</children>
			<GridPane.margin>
				<Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
			</GridPane.margin>
		</GridPane>
		<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0"
			spacing="500.0" GridPane.columnSpan="2" GridPane.rowIndex="2">
			<children>
				<Label fx:id="lblAlumno" text="Nombre Alumno">
					<font>
						<Font size="18.0" />
					</font>
				</Label>
				<Label fx:id="lblLibro" text="Titulo Libro">
					<font>
						<Font size="18.0" />
					</font>
				</Label>
			</children>
		</HBox>
